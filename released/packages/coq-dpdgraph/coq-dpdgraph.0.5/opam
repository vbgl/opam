opam-version: "1.2"

maintainer: "yves.bertot@inria.fr"
license: "LGPL 2.1"

homepage: "https://github.com/karmaki/coq-dpdgraph"
build: [
  ["./configure"]
  ["echo" "%{jobs}%" "jobs for the linter"]
  [make]
  [make "install" "BINDIR=%{bin}%"]
 ]
remove: [
  ["rm" "%{bin}%/dpd2dot"]
  ["rm" "-R" "%{lib}%/coq/user-contrib/dpdgraph"]
]

depends: [
   "coq" {>= "8.5" & < "8.6~"}
   "ocamlgraph"
]

authors: [ "Anne Pacalet" "Yves Bertot"]
